{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/admin/*"],
      "@features/*": ["./apps/admin/features/*"],
      "@features/admin/*": ["./apps/admin/features/admin/*"],
      "@features/operator/*": ["./apps/admin/features/operator/*"],
      "@features/driver/*": ["./apps/admin/features/driver/*"],
      "@features/shared/*": ["./apps/admin/features/shared/*"],
      "@entities/*": ["./apps/admin/entities/*"],
      "@admin/*": ["./app/(admin)/*"],
      "@admin-shared/*": ["./apps/admin/shared/*"],
      "@/app/*": ["./app/*"],
      "@/lib/*": ["./apps/admin/lib/*"],
      "@/shared/*": ["./apps/admin/shared/*"],
      "@contracts/*": ["./packages/contracts/src/*"],
      "@ui-core/*": ["./packages/ui-core/src/*"],
      "@ui-dashboard/*": ["./packages/ui-dashboard/src/*"],
      "@formatters/*": ["./packages/formatters/src/*"],
      "@styles/*": ["./packages/styles/*"],
      "@vantage-lane/ui-core": ["./packages/ui-core/src"],
      "@vantage-lane/ui-icons": ["./packages/ui-icons/src"],
      "@vantage-lane/ui-dashboard": ["./packages/ui-dashboard/src"],
      "@vantage-lane/ui-table": ["./packages/ui-table/src"],
      "@vantage-lane/styles": ["./packages/styles"],
      "@vantage-lane/formatters": ["./packages/formatters/src"],
      "@vantage-lane/contracts": ["./packages/contracts/src"]
    },
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "supabase/functions/**/*"]
}
